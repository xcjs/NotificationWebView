<Window x:Class="NotificationWebView.ChromiumUI.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:NotificationWebView.ChromiumUI"
		mc:Ignorable="d"
		Title="NotificationWebView" Height="640" Width="360" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True" Icon="Dakirby309-Simply-Styled-Google-Chromium.ico">
	<ContentControl x:Name="WebView" Content="Browser goes here" Grid.Column="1" />
	<Window.Resources>
		<Storyboard x:Key="SlideUpStoryboard">
			<DoubleAnimation x:Name="SlideUpAnimation" Duration="0:0:.5" Storyboard.TargetProperty="Top" AccelerationRatio=".1"/>
		</Storyboard>
		<Storyboard x:Key="SlideDownStoryboard">
			<DoubleAnimation x:Name="SlideDownAnimation" Duration="0:0:.5" Storyboard.TargetProperty="Top" AccelerationRatio=".1"/>
		</Storyboard>		
	</Window.Resources>
	<Window.Effect>
		<DropShadowEffect/>
	</Window.Effect>
</Window>
