<ResourceDictionary
  x:Class="NotificationWebView.NotificationIcon"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:Tb="http://www.hardcodet.net/taskbar">
	<Tb:TaskbarIcon x:Name="NotificationWebViewIcon" x:Key="NotificationWebViewIcon"
		Visibility="Visible"
		ToolTipText="NotificationWebView"
		IconSource="Assets/iconsineed-world-16-white.ico"
		MenuActivation="RightClick"
		TrayLeftMouseDown="NotificationWebViewIcon_TrayLeftMouseDown">
		<Tb:TaskbarIcon.ContextMenu>
			<ContextMenu>
				<MenuItem Header="Exit NotificationWebView" Click="MenuItem_Click" />
			</ContextMenu>
		</Tb:TaskbarIcon.ContextMenu>
	</Tb:TaskbarIcon>
</ResourceDictionary>

